require 'base64'
require 'fileutils'

class TasksReportController < ApplicationController

  def get
    project = Project.by_key(params[:resource])
    measure=project.last_snapshot.measure('tasks-report-data')
    send_data(Base64.decode64(measure.data), :filename => "task-report.xlsx", :type => "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet")
  end

end
